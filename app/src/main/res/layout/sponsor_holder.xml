<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewUser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:elevation="9dp"
    app:cardBackgroundColor="#FF0A1D59"
    app:cardCornerRadius="9dp"
    app:cardElevation="9dp">

    <RelativeLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sponsorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/vsmlogoblueremovebgpreview" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sponsorImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Company Name"
            android:fontFamily="@font/dosis_semibold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/companyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/companyName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Type of Sponsor"
            android:textColor="#fffabf"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="18sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>